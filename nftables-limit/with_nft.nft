#!/usr/sbin/nft -f

flush ruleset

table netdev example {

    limit lim_400ppm { 
        rate 400/minute ;
    }
    
    chain fwd_chain_ac {
        type filter hook ingress device ba_eth priority 1; policy drop;
        limit name "lim_400ppm" accept
        fwd to bc_eth        
    }

    chain fwd_chain_ca {
        type filter hook ingress device bc_eth priority 1; policy accept;
        fwd to ba_eth 
    }
}
