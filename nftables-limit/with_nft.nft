#!/usr/sbin/nft -f

flush ruleset

table netdev example {
    
    chain fwd_chain_ac {
        type filter hook ingress device ba_eth priority 1; policy accept;
        fwd to bc_eth        
    }

    chain fwd_chain_ca {
        type filter hook ingress device bc_eth priority 1; policy accept;
        limit rate over 10/second
        fwd to ba_eth 
    }
}

